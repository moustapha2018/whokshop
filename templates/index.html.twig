
     {% extends 'template.html.twig' %}

     {% block body %}
     <form class="contact1-form validate-form" action="{{ path('login') }}" method = "POST">
         <div class="wrap-input1 validate-input" data-validate = "Name is required">
             {% for label, messages in app.flashes %}
                 {% for message in messages %}
                     </br>
                     <div class="alert alert-{{ label }} mt-10">
                         {{ message }}
                     </div>
                 {% endfor %}
             {% endfor %}
         </div>
         <label for="statut" style="font-size: 20px; font-family: Arial Black;">Vous Ãªtes?</label>
         <div class="wrap-input1 validate-input" data-validate = "Name is required">
             <select name="status" id="status" class="input1" style="height: 45px; border-radius: 20px; ">
                 <option value="Administrateur" selected="selected">Administrateur</option>
                 <option value="Collaborateur">Collaborateur</option>

             </select>
         </div>

         <div class="wrap-input1 validate-input" data-validate = "Name is required">
             <input class="input1" type="text" name="loginUser" placeholder="Identifiant">
             <span class="shadow-input1"></span>
         </div>
         <div class="wrap-input1 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
             <input class="input1" type="text" name="loginCompany" placeholder="Id Organisme">
             <span class="shadow-input1"></span>
         </div>

         <div class="wrap-input1 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
             <input class="input1" type="password" name="password" placeholder="Mot de passe">
             <span class="shadow-input1"></span>
         </div>
         <div class="container-contact1-form-btn">
             <button type="submit" class="contact1-form-btn">
                                <span>
                                    connexion
                                    <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                                </span>
             </button>

             <a href="{{ path('register') }}" class="contact1-form-btn mt-4"> Ouvrir un Comptre <i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>

         </div>

     {% endblock %}

